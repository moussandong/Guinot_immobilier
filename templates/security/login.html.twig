{% extends 'base.html.twig' %} {% block title 'Connexion!{% endblock' %} {% block body %}

<div class="container mt-4">

    {% if error %}
        <div class="mb-3">
            {{ error.messagekey}}
        </div>
    {% endif %}

    <h1> Connexion </h1>
    <form action=" {{ path('admin.login') }} " method="post ">
        <div class="form-group ">
            <h5><label> Nom utilisateur</label></h5>
            <input placeholder=" adresse Mail "type="text " required name="_username" type="text" class="form-conrol" value="{{ last_username }}" >
        </div>

        <div class="form-group ">
            <h5><label> Mot de Passe </label></h5>
            <input placeholder=" Password" type="password" required name="_password" type="password" class="form-conrol">
        </div>

        <button type="submit " class="btn btn-primary"> Se conneter </button>

    </form>
</div>


{% endblock %}