{% extends 'base.html.twig' %}

{% block title %}Guinot-immobilier{% endblock %}

{% block body %}
  {{ include('_header_footers/_header_location.html.twig') }}
<div class="container">
{# Liste de ce que j'aimerai afficher#}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
