            </tr>
            
        {% else %}
             <tr>
                <td colspan="9">no records found</td>
            </tr>
                  <br>
                  <br>
        {% endfor %}
        <a href="{{ path('location.nouveau.admin') }}"><button type="button" class="btn-outline-light">Enregistrer un nouveau Bien </a>
        </br>
        </tbody>
    </table>
